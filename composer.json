{
    "name": "mnapoli/imapi",
    "description": "IMAP API",
    "license": "MIT",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Imapi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Imapi\\Test\\": "tests/"
        }
    },
    "require": {
        "php": "~7.0",
